<%- include("../partials/header") %>


  <div class="row">
       <div class="col-md-12 text-center">
          <h1 class="my-4"> Create a New Campground</h1>
          <div style="width: 30%;" class="m-auto">
              <form action="/campgrounds" method="POST">
                <input class="form-control my-4" type="text" name = "name" placeholder="Name">
                <input class="form-control my-4" type="text" name="image" placeholder="Image Link">
                <input class="form-control my-4" type="number" name="price" placeholder="Price" min="0.01" step="0.01">
                <input class="form-control my-4" type="text" name="description" placeholder="Description">

                 <button class="btn btn-primary mt-2 btn-block">Submit</button>
                </form>
                <p><a href="/campgrounds" class="btn btn-sm btn-warning">Go back</a></p>
           </div>
       </div>
  </div>




<%- include("../partials/footer") %>